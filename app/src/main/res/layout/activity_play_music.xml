<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_weight="10"
    android:layout_height="match_parent"
    tools:context=".Activity.PlayMusicActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbarplaynhac">

    </androidx.appcompat.widget.Toolbar>
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:id="@+id/viewPager_playnhac">

    </androidx.viewpager.widget.ViewPager>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:textStyle="bold"
                android:textSize="16dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textviewtimesong"
                android:textColor="@android:color/white"
                android:layout_weight="0.5"/>
            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/seebarsong"
                android:layout_weight="9" />
            <TextView

                android:textStyle="bold"
                android:textSize="16dp"
                android:gravity="center"
                android:text="00:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textviewtitletimesong"
                android:textColor="@android:color/white"
                android:layout_weight="0.5"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imagebuttonsuffe"
                    android:layout_marginRight="15dp"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:src="@drawable/iconsuffle"/>
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/imagebuttonpre"
                android:layout_marginRight="15dp"
                android:scaleType="fitXY"
                android:background="@null"
                android:src="@drawable/iconpreview"/>
            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/imagebuttonplay"
                android:layout_marginRight="15dp"
                android:scaleType="fitXY"
                android:background="@null"
                android:src="@drawable/iconplay"/>
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/imagebuttonnext"
                android:layout_marginRight="15dp"
                android:scaleType="fitXY"
                android:background="@null"
                android:src="@drawable/iconnext"/>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imagebuttonpepeat"
                android:layout_marginRight="15dp"
                android:scaleType="fitXY"
                android:background="@null"
                android:src="@drawable/iconrepeat"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>